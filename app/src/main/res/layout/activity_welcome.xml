<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrandiji"
    android:padding="20dp"
    android:visibility="visible"
    tools:context="abbasi.com.nixor.hitch.Welcome">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome to Nixor CarPool "
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seat"
        android:layout_alignStart="@+id/seat"
        android:layout_centerVertical="true"
        android:background="@color/Nixor_color"
        android:text="I want to offer a ride"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/car"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:background="@color/color4"
        android:text="I need a ride"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/cartopool"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/carpool" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/car"
        android:layout_alignStart="@+id/car"
        android:layout_below="@+id/cartopool"
        android:layout_marginTop="31dp"
        android:text="Available Seats: 0"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car"
        android:layout_centerHorizontal="true"
        android:background="@color/color10"
        android:text="Remove seat"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/car"
        android:layout_centerHorizontal="true"
        android:background="@color/color10"
        android:text="Add seat"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/Nixor_color"
        android:text="Next"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/Next"
        android:layout_alignLeft="@+id/count"
        android:layout_alignStart="@+id/count"
        android:background="@color/Nixor_color"
        android:text="Back"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/daypicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/cartopool"
        android:background="#000"
        android:onClick="openDayPicker"
        android:padding="2dp"
        android:text="Select Day and TIme"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/dayandtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/Back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/daypicker"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"

        android:background="#fff"
        android:visibility="invisible" />

    <Button
        android:id="@+id/tofrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cartopool"
        android:layout_alignRight="@+id/cartopool"
        android:layout_alignTop="@+id/cartopool"
        android:background="#000"
        android:text="To Nixor"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="invisible" /><![CDATA[



    />

]]>
</RelativeLayout>